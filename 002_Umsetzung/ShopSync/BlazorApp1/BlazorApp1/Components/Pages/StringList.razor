@page "/stringlist"

<h3>Meine String-Liste</h3>

@if (items == null || items.Count == 0)
{
    <p><em>Keine Elemente in der Liste.</em></p>
}
else
{
    <ul>
        @foreach (var item in items)
        {
            <li>@item</li>
        }
    </ul>
}

<hr />

<h4>Element hinzufügen</h4>
<input type="text" @bind="newItem" placeholder="Neues Element eingeben" />
<button @onclick="AddItem">Hinzufügen</button>

@code {
    private readonly List<string> items = new();
    private string newItem = string.Empty;

    protected override void OnInitialized()
    {
        // Beispiel-Einträge
        items.AddRange(new[] { "Apfel", "Banane", "Kirsche", "Dattel" });
    }

    private void AddItem()
    {
        if (!string.IsNullOrWhiteSpace(newItem))
        {
            items.Add(newItem.Trim());
            newItem = string.Empty; // Eingabefeld leeren
        }
    }
}